<% if user_signed_in? %>
  <% if is_vote?(question) %>
    <%= link_to question_vote_path(question.id, question.vote_user(current_user)), method: :delete, remote: true do %>
      いいね！
    <% end %>
    <span><%= question.votes_count = 0 %></span>
  <% else %>
    <%= link_to question_votes_path(question.id), method: :post, remote: true do %>
      いいね！
    <% end %>
    <span><%= question.votes_count = 1 %></span>
  <% end %>
<% end %>
