<% if user_signed_in? %>
  <% unless is_favorite?(question) %>
    <%= link_to question_favorites_path(question.id), method: :post, remote: true do %>
      ☆ お気に入りに追加
    <% end %>
  <% else %>
    <%= link_to question_favorite_path(question.id, question.favorite_by(current_user)), method: :delete, remote: true do %>
      ★ お気に入りを取り消す
    <% end %>
  <% end %>
<% end %>